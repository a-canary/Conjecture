{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "TODO.md",
    "ANALYSIS.md",
    "RESULTS.md"
  ],
  "agent": {
    "build": {
      "mode": "primary",
      "model": "chutes/zai-org/GLM-4.6-FP8",
      "description": "Primary coding and testing agent",
      "temperature": 0.3
    },
    "plan": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "description": "Strategic planning and validation agent",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false
      }
    },
    "planner": {
      "description": "Strategic planning and validation using Claude Sonnet 4",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "temperature": 0.1
    },
    "coder": {
      "description": "Coding and testing implementation using GLM-4.6",
      "mode": "subagent",
      "model": "chutes/zai-org/GLM-4.6-FP8",
      "temperature": 0.3
    }
  },
  "command": {
    "cycle": {
      "description": "Run infinite iteration cycle",
      "template": "Execute the infinite improvement cycle as defined in .opencode/command/cycle.md",
      "agent": "build"
    },
    "review": {
      "description": "Comprehensive code review",
      "template": "Execute comprehensive code review as defined in .opencode/command/review.md",
      "agent": "plan"
    },
    "test-coverage": {
      "description": "Run tests with coverage",
      "template": "Run comprehensive test suite with coverage analysis as defined in .opencode/command/test-coverage.md",
      "agent": "build"
    },
    "validate": {
      "description": "Validate hypothesis with benchmarks",
      "template": "Validate core hypothesis as defined in .opencode/command/validate.md",
      "agent": "plan",
      "subtask": true
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "git push": "ask",
      "git push --force": "deny",
      "rm -rf": "deny",
      "python -m pytest*": "allow",
      "python conjecture*": "allow",
      "*": "allow"
    },
    "webfetch": "allow"
  }
}
