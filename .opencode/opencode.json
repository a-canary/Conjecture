{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "allow",
    "bash": {
      "git push": "ask",
      "git push --force": "deny",
      "rm -rf": "deny",
      "python -m pytest*": "allow",
      "python conjecture*": "allow",
      "*": "allow"
    },
    "webfetch": "allow"
  },
  "provider": {
    "chutes": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Chutes",
      "options": {
        "baseURL": "https://llm.chutes.ai/v1"
      },
      "models": {
        "zai-org/GLM-4.7-TEE": {
          "name": "GLM-4.7-TEE"
        }
      }
    }
  },
  "agent": {
    "agent-super": {
      "model": "chutes/zai-org/GLM-4.7-TEE",
      "temperature": 0.4,
      "description": "High-level reasoning for review, analysis, strategic decisions"
    },
    "agent-ego": {
      "model": "chutes/zai-org/GLM-4.7-TEE",
      "temperature": 0.2,
      "description": "Implementation for code writing and refactoring"
    },
    "agent-id": {
      "model": "chutes/zai-org/GLM-4.7-TEE",
      "temperature": 0.15,
      "description": "Execution for testing, bash commands, web research"
    },
    "meta": {
      "model": "chutes/zai-org/GLM-4.7-TEE",
      "temperature": 0.4,
      "description": "Framework perfection - analyzes and improves agents, commands, context systems"
    }
  },
  "model": "chutes/zai-org/GLM-4.7-TEE"
}
